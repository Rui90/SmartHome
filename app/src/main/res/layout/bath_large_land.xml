<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/waterquantity"
        android:textSize="40sp"
        android:id="@+id/light_bed"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="300dp" />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_below="@+id/janel"
        android:layout_alignRight="@+id/Nome"
        android:layout_alignEnd="@+id/Nome"
        android:layout_marginLeft="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/watertemperature"
        android:textSize="40sp"
        android:id="@+id/janel"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="600dp"/>

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar2"
        android:indeterminate="false"
        android:layout_toEndOf="@+id/seekBar"
        android:layout_marginLeft="310dp"
        android:layout_below="@+id/janel"
        android:layout_toRightOf="@+id/seekBar" />

    <ImageButton
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:id="@+id/lampada"
        android:src="@drawable/lampada2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:textSize="24sp"
        android:id="@+id/textView"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="310dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/textView2"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="820dp"
        android:textSize="24sp"/>

</RelativeLayout>