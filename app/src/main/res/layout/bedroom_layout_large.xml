<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageButton
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:id="@+id/lampada"
        android:src="@drawable/lampada2"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="30dp" />

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="140dp"
        android:id="@+id/imageButton2"
        android:src="@drawable/janela2"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@id/lampada"
        android:layout_toRightOf="@id/lampada" />

    <Spinner
        android:layout_width="380dp"
        android:layout_height="80dp"
        android:id="@+id/spinner"
        android:layout_below="@+id/lampada"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="110dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:text="Novo Modo"
        android:textSize="25sp"
        android:id="@+id/createprofile"
        android:layout_below="@+id/spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activar Modo"
        android:id="@+id/buttonSet"
        android:layout_toStartOf="@+id/createprofile"
        android:layout_alignBottom="@+id/createprofile"
        android:layout_toLeftOf="@+id/createprofile" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar Modo"
        android:id="@+id/editMode"
        android:layout_toEndOf="@+id/createprofile"
        android:layout_alignBottom="@+id/createprofile"
        android:layout_toRightOf="@+id/createprofile" />

</RelativeLayout>