<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/tvonoff"
        android:src="@drawable/lampada"
        android:layout_marginTop="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/volume"
        android:layout_below="@+id/tvonoff"
        android:layout_toLeftOf="@+id/tvonoff"
        android:layout_toStartOf="@+id/tvonoff"
        android:layout_marginTop="55dp" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/channel"
        android:layout_toEndOf="@+id/tvonoff"
        android:layout_alignTop="@+id/volume"
        android:layout_toRightOf="@+id/tvonoff" />

</RelativeLayout>