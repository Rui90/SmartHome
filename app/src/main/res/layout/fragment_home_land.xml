<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_marginTop="75dp"
        android:layout_marginLeft="145dp"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="@string/bedroom"
        android:textSize="25sp"
        android:id="@+id/quarto" />

    <Button
        android:layout_marginTop="75dp"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="@string/dinnerroom"
        android:textSize="25sp"
        android:id="@+id/sala"
        android:layout_toRightOf="@+id/quarto" />

    <Button
        android:layout_marginLeft="145dp"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="@string/kitchen"
        android:textSize="25sp"
        android:id="@+id/cozinha"
        android:layout_below="@+id/quarto" />

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="@string/bath"
        android:textSize="25sp"
        android:id="@+id/wc"
        android:layout_below="@+id/sala"
        android:layout_toRightOf="@+id/cozinha" />

</RelativeLayout>