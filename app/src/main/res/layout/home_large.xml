<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_marginTop="210dp"
        android:layout_marginLeft="85dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:textSize="35sp"
        android:text="@string/bedroom"
        android:id="@+id/quarto"
        android:layout_marginRight="20dp"/>

    <Button
        android:layout_marginTop="210dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:textSize="35sp"
        android:text="@string/dinnerroom"
        android:id="@+id/sala"
        android:layout_toRightOf="@id/quarto" />

    <Button
        android:layout_marginLeft="85dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:textSize="35sp"
        android:text="@string/kitchen"
        android:id="@+id/cozinha"
        android:layout_below="@id/sala"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:textSize="35sp"
        android:text="@string/bath"
        android:id="@+id/wc"
        android:layout_below="@id/sala"
        android:layout_toRightOf="@id/cozinha"
        android:layout_alignBottom="@+id/cozinha"
        android:layout_alignRight="@+id/sala"
        android:layout_alignEnd="@+id/sala"
        android:layout_marginTop="20dp" />


</RelativeLayout>