<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/quarto"
        android:src="@drawable/bedroom"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="225dp"
        android:background="@color/white"/>

    <ImageButton
        android:layout_marginTop="60dp"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:id="@+id/sala"
        android:src="@drawable/sala"
        android:layout_toRightOf="@id/quarto"
        android:background="@color/white"
        android:layout_marginLeft="40dp"/>


    <ImageButton
        android:layout_marginLeft="225dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/cozinha"
        android:src="@drawable/cozinha"
        android:layout_below="@id/sala"
        android:layout_toRightOf="@id/cozinha"
        android:layout_marginTop="20dp"
        android:background="@color/white"/>

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/wc"
        android:src="@drawable/pipe"
        android:layout_below="@id/sala"
        android:layout_toRightOf="@id/cozinha"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:layout_marginLeft="70dp"/>

</RelativeLayout>