<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_marginTop="60dp"
        android:layout_marginLeft="225dp"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:textSize="35sp"
        android:text="@string/bedroom"
        android:id="@+id/quarto" />

    <Button
        android:layout_marginTop="60dp"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:textSize="35dp"
        android:text="@string/dinnerroom"
        android:id="@+id/sala"
        android:layout_toRightOf="@id/quarto" />

    <Button
        android:layout_marginLeft="225dp"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:textSize="35dp"
        android:text="@string/kitchen"
        android:id="@+id/cozinha"
        android:layout_below="@id/quarto" />

    <Button
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:textSize="35dp"
        android:text="@string/bath"
        android:id="@+id/wc"
        android:layout_toRightOf="@id/cozinha"
        android:layout_below="@id/sala" />

</RelativeLayout>