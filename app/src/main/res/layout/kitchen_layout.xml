    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Microondas"
        android:textSize="20sp"
        android:id="@+id/microwave"
        android:checked="false"
        android:layout_marginTop="220dp"
        android:layout_alignLeft="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tempo"
        android:id="@+id/textView3"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="30dp"/>

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_marginLeft="10dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerKitchen"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/chronometer"
        android:layout_toEndOf="@+id/chronometer"
        android:layout_marginLeft="20dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set"
        android:id="@+id/mode"
        android:layout_alignBottom="@+id/spinnerKitchen"
        android:layout_alignRight="@+id/spinnerKitchen"
        android:layout_alignEnd="@+id/spinnerKitchen" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forno"
        android:textSize="20sp"
        android:id="@+id/forno"
        android:checked="false"
        android:layout_below="@+id/spinnerKitchen"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Temperatura"
        android:id="@+id/textView4"
        android:layout_below="@+id/forno"
        android:layout_alignLeft="@+id/forno"
        android:layout_alignStart="@+id/forno"
        android:layout_marginTop="21dp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar3"
        android:layout_alignLeft="@+id/spinnerKitchen"
        android:layout_alignStart="@+id/spinnerKitchen"
        android:layout_toLeftOf="@+id/mode"
        android:layout_toStartOf="@+id/mode"
        android:layout_below="@+id/textView4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/textView2"
        android:layout_below="@+id/seekBar3"
        android:layout_alignLeft="@+id/seekBar3"
        android:layout_alignStart="@+id/seekBar3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set"
        android:id="@+id/set2"
        android:layout_alignBottom="@+id/seekBar3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/seekBar3"
        android:layout_toEndOf="@+id/seekBar3" />

</RelativeLayout>