<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white">

    <ImageButton
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:id="@+id/lampada"
        android:src="@drawable/lampada2"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="30dp"
        android:layout_alignParentTop="true" />

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:id="@+id/imageButton2"
        android:src="@drawable/janela2"
        android:layout_alignTop="@+id/lampada"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="50dp"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Microondas"
        android:id="@+id/microwave"
        android:checked="false"
        android:textSize="40sp"
        android:layout_marginTop="80dp"
        android:layout_alignLeft="@+id/lampada"
        android:layout_below="@+id/lampada" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tempo"
        android:textSize="40sp"
        android:id="@+id/textView3"
        android:layout_below="@+id/microwave"
        android:layout_alignStart="@+id/microwave"
        android:layout_alignLeft="@+id/microwave"
        android:layout_marginTop="20dp"/>

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer"
        android:layout_toRightOf="@+id/textView3"
        android:layout_below="@+id/textView3" />

    <Spinner
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerKitchen"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/chronometer"
        android:layout_toEndOf="@+id/chronometer"
        android:layout_marginLeft="21dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="Set"
        android:id="@+id/mode"
        android:layout_toRightOf="@+id/spinnerKitchen"
        android:layout_marginTop="430dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forno"
        android:textSize="40sp"
        android:id="@+id/forno"
        android:checked="false"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Temperatura"
        android:textSize="40sp"
        android:id="@+id/textView4"
        android:layout_below="@+id/forno"
        android:layout_alignLeft="@+id/forno"
        android:layout_alignStart="@+id/forno"
        android:layout_marginTop="21dp" />

    <SeekBar
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar3"
        android:layout_toRightOf="@+id/textView4"
        android:layout_below="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/textView2"
        android:layout_below="@+id/seekBar3"
        android:layout_alignLeft="@+id/seekBar3"
        android:layout_alignStart="@+id/seekBar3" />

</RelativeLayout>